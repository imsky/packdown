{
  "name": "packdownjs",
  "version": "0.9.0",
  "author": "Ivan Malopinsky",
  "license": "MIT",
  "description": "",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imsky/packdown.git"
  },
  "scripts": {
    "test": "BLUEBIRD_DEBUG=1 istanbul cover -x 'vendor/*' _mocha -- --bail './test/**/*-test.js'",
    "codecov": "codecov",
    "browserify": "browserify -s Packdown index.js -o packdown.js",
    "uglify": "uglifyjs packdown.js -o packdown.min.js",
    "format": "jsfmt --write -v lib",
    "lint": "eslint index.js lib/*.js lib/commands/*.js bin/*.js",
    "quality": "npm run format && npm run lint && npm run test",
    "build": "npm run quality && npm run browserify",
    "postbuild": "npm run uglify && node scripts/version "
  },
  "keywords": [
    "markdown",
    "pack",
    "file",
    "collection",
    "template",
    "boilerplate",
    "scaffold",
    "gist",
    "fiddle"
  ],
  "bugs": {
    "url": "https://github.com/imsky/packdown/issues"
  },
  "homepage": "https://github.com/imsky/packdown",
  "dependencies": {
    "bluebird": "^2.10.0",
    "commander": "^2.9.0",
    "isbinaryfile": "^3.0.0",
    "pluralize": "^1.2.1",
    "recursive-readdir": "^1.3.0",
    "shelljs": "^0.5.3"
  },
  "devDependencies": {
    "browserify": "^11.1.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.2.0",
    "codecov": "^1.0.1",
    "eslint": "^1.10.3",
    "istanbul": "^0.4.2",
    "jsfmt": "^0.5.3",
    "mocha": "^2.4.5",
    "mock-fs": "^3.8.0",
    "uglify-js": "^2.4.24"
  }
}
