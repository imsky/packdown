{
  "name": "packdownjs",
  "version": "0.3.0",
  "formatVersion": 1,
  "author": "Ivan Malopinsky",
  "license": "MIT",
  "description": "",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imsky/packdown.git"
  },
  "_bin": {
    "packdown": "./bin/packdown.js"
  },
  "scripts": {
    "test": "istanbul cover _mocha -- --bail lib/**/*-test.js",
    "nearley": "nearleyc lib/packdown.ne -o lib/grammar.js",
    "browserify": "browserify -s Packdown index.js -o packdown.js",
    "uglify": "uglifyjs packdown.js -o packdown.min.js",
    "format": "jsfmt --write -v lib",
    "lint": "eslint lib/**/*.js bin/*.js",
    "coverage": "mocha test/**/*-test.js --require blanket -R html-cov > coverage.html",
    "quality": "npm run format && npm run lint",
    "banner": "node build/banner",
    "prebuild": "node build/version && npm run nearley",
    "build": "npm run quality && npm run browserify",
    "postbuild": "npm run uglify && npm run banner",
    "prepublish": "npm run build"
  },
  "config": {
    "blanket": {
      "pattern": [
        "lib"
      ],
      "data-cover-never": [
        "node_modules"
      ]
    }
  },
  "keywords": [
    "markdown",
    "pack",
    "file",
    "collection"
  ],
  "bugs": {
    "url": "https://github.com/imsky/packdown/issues"
  },
  "homepage": "https://github.com/imsky/packdown",
  "dependencies": {
    "base-64": "^0.1.0",
    "bluebird": "^2.10.0",
    "commander": "^2.9.0",
    "glob": "^5.0.15",
    "is-valid-path": "^0.1.1",
    "json-stable-stringify": "^1.0.0",
    "nearley": "^1.6.2",
    "pluralize": "^1.2.1",
    "recursive-readdir": "^1.3.0",
    "shelljs": "^0.5.3",
    "utf8": "^2.1.1",
    "walk": "^2.3.9",
    "yargs": "^3.27.0"
  },
  "devDependencies": {
    "blanket": "^1.1.7",
    "browserify": "^11.1.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.2.0",
    "diff": "^2.1.1",
    "eslint": "^1.5.0",
    "istanbul": "^0.4.2",
    "jsfmt": "^0.5.0",
    "jsonfile": "^2.2.2",
    "line-diff": "^1.2.1",
    "mocha": "^2.4.5",
    "uglify-js": "^2.4.24"
  }
}
